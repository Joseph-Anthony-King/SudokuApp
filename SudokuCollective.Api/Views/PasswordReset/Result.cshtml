@using SudokuCollective.Api.Models
@model PasswordReset

@{

    if (Model.Success)
    {
        ViewData["Title"] = "Password Reset";
    }
    else
    {
        ViewData["Title"] = "Password Not Reset";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <img src="/images/logo.png" class="center" />
    <h1 class="text-center">Welcome to Sudoku Collective</h1>
    <div class="col-md-12 text-center">
        <a href="/swagger/index.html"
           target="_blank"
           title="Sudoku Collective API Documentation"
           class="btn btn-primary"
           role="button">API Documentation</a>
        <a href="https://github.com/Joseph-Anthony-King/SudokuCollective"
           target="_blank"
           title="Sudoku Collective on Github"
           class="btn btn-primary"
           role="button">View Code on Github</a>
        <a href="http://localhost:8080"
           target="_blank"
           title="Sudoku Collective Admin Vue"
           class="btn btn-primary"
           role="button">Open Admin App</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        @if (Model.Success)
        {
            <h2>Password Updated</h2>
            <p>
                @Model.UserName, your password has been updated.  Please feel free to return to <a href="@Model.Url" target="_blank" title="@Model.AppTitle">@Model.AppTitle</a>, hope you are having fun!
            </p>
        }
        else
        {
            <h2>Password Not Updated</h2>
            <p>
                Sorry @Model.UserName, but your request to update your password failed with the following error message:
            </p>
            <p>
                @Model.Message
            </p>
        }
    </div>
    <div class="col-sm-2"></div>
</div>

<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>